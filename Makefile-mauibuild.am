mauibuild: src/mauibuild.in Makefile
	sed -e s,@libdir\@,$(libdir), \
	    -e s,@libexecdir\@,$(libexecdir), \
	    -e s,@datarootdir\@,$(datarootdir), \
	    -e s,@pkgdatadir\@,$(pkgdatadir), \
	    -e s,@PYTHON\@,$(PYTHON), \
	    $< > $@.tmp && mv $@.tmp $@

EXTRA_DIST += src/mauibuild.in

bin_SCRIPTS += mauibuild

mauibuilddir=$(libdir)/mauibuild
mauibuild_PYTHON =					\
	src/mauibuild/__init__.py			\
	src/mauibuild/miscutil.py			\
	src/mauibuild/filemonitor.py			\
	src/mauibuild/task.py				\
	src/mauibuild/taskset.py			\
	src/mauibuild/fileutil.py			\
	src/mauibuild/jsondb.py				\
	src/mauibuild/jsonutil.py			\
	src/mauibuild/logger.py				\
	src/mauibuild/main.py				\
	src/mauibuild/mainloop.py			\
	src/mauibuild/warningfilter.py			\
	src/mauibuild/snapshot.py			\
	src/mauibuild/subprocess_helpers.py		\
	src/mauibuild/termcolor.py			\
	src/mauibuild/timeutil.py			\
	src/mauibuild/vcs.py				\
	$(NULL)

mauibuildbuiltinsdir=$(mauibuilddir)/builtins
mauibuildbuiltins_PYTHON =				\
	src/mauibuild/builtins/__init__.py		\
	src/mauibuild/builtins/git_mirror.py		\
	src/mauibuild/builtins/make.py			\
	src/mauibuild/builtins/run_task.py		\
	$(NULL)

mauibuildtasksdir=$(mauibuilddir)/tasks
mauibuildtasks_PYTHON =				\
	src/mauibuild/tasks/__init__.py		\
	src/mauibuild/tasks/build.py		\
	src/mauibuild/tasks/resolve.py		\
	src/mauibuild/tasks/publish.py		\
	$(NULL)
