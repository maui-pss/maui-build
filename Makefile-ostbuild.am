ostbuild: src/ostbuild/ostbuild.in Makefile
	sed -e s,@libdir\@,$(libdir), \
	    -e s,@datarootdir\@,$(datarootdir), \
	    -e s,@pkgdatadir\@,$(pkgdatadir), \
	    -e s,@PYTHON\@,$(PYTHON), \
	    $< > $@.tmp && mv $@.tmp $@

ostree-build-compile-one: src/ostbuild/ostree-build-compile-one.in Makefile
	sed -e s,@libdir\@,$(libdir), \
	    -e s,@datarootdir\@,$(datarootdir), \
	    -e s,@pkgdatadir\@,$(pkgdatadir), \
	    -e s,@PYTHON\@,$(PYTHON), \
	    $< > $@.tmp && mv $@.tmp $@
EXTRA_DIST += ostbuild/ostbuild.in ostbuild/ostree-build-compile-one.in

