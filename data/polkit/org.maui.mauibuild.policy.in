<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policyconfig PUBLIC
 "-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN"
 "http://www.freedesktop.org/standards/PolicyKit/1/policyconfig.dtd">
<policyconfig>

  <vendor>The mauibuild Project</vendor>
  <vendor_url>http://www.maui-project.org/</vendor_url>

  <action id="org.maui.mauibuild.image-pull-deploy">
    <description>Pull and deploy a tree into an image</description>
    <message>Authentication is required to pull and deploy the live tree into a SquashFS image.</message>
    <annotate key="org.freedesktop.policykit.exec.path">@libexecdir@/mauibuild-image-pull-deploy</annotate>

    <defaults>
      <allow_any>yes</allow_any>
      <allow_inactive>yes</allow_inactive>
      <allow_active>yes</allow_active>
    </defaults>
  </action>

  <action id="org.maui.mauibuild.mkefiboot">
    <description>Helper script to create efiboot images</description>
    <message>Authentication is required to prepare or cleanup efiboot creation process.</message>
    <annotate key="org.freedesktop.policykit.exec.path">@libexecdir@/mauibuild-mkefiboot</annotate>

    <defaults>
      <allow_any>yes</allow_any>
      <allow_inactive>yes</allow_inactive>
      <allow_active>yes</allow_active>
    </defaults>
  </action>

</policyconfig>
